# Application
APP_NAME=Agentic AI Workflow Automation
APP_ENV=development
SECRET_KEY=your-super-secret-key-change-in-production
DEBUG=true

# Database (SQLite by default — change to PostgreSQL in production)
DATABASE_URL=sqlite+aiosqlite:///./workflow.db

# SMTP Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@psgai.edu.in

# OpenAI (optional — system works in rule-based mode without this)
OPENAI_API_KEY=sk-your-openai-key-here

# ERP
ERP_BASE_URL=https://erp.iics.ac.in/api
ERP_API_KEY=erp-api-key-here

# JWT
ACCESS_TOKEN_EXPIRE_MINUTES=60
ALGORITHM=HS256
